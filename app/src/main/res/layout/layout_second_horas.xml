<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/layout_horas"
  style="@style/second_layout"
  android:paddingHorizontal="50dp"
  android:paddingVertical="5dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal" >

    <EditText
        android:id="@+id/edit_hours"
        style="@style/editHoursText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:textColor="@color/md_blue_100"
        android:textSize="40sp"
        android:text="@string/doispontos"/>

    <EditText
        android:id="@+id/edit_minutes"
        style="@style/editHoursText" />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.016"
        android:paddingEnd="10dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/md_blue_100"
        android:labelFor="@id/edit_hours"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.009"
        android:paddingStart="15dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/md_blue_100"
        android:labelFor="@id/edit_minutes"/>
  </LinearLayout>

</LinearLayout>
