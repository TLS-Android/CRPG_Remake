<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/layout_horas"
  style="@style/second_layout"
  android:paddingHorizontal="@dimen/padding4x"
  android:paddingVertical="@dimen/padding4">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal" >

    <EditText
        android:id="@+id/edit_hours"
        style="@style/editHoursText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/padding4"
        android:textColor="@color/md_blue_100"
        android:textSize="40sp"
        android:text="@string/doispontos"/>

    <EditText
        android:id="@+id/edit_minutes"
        style="@style/editHoursText" />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/button_text_size"
        android:textColor="@color/md_blue_100"
        android:labelFor="@id/edit_hours"/>

    <TextView
        android:id="@+id/placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/padding4"
        android:visibility="invisible"
        android:textColor="@color/md_blue_100"
        android:textSize="40sp"
        android:text="@string/clock_placeholder"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/button_text_size"
        android:textColor="@color/md_blue_100"
        android:labelFor="@id/edit_minutes"/>
  </LinearLayout>

</LinearLayout>
