<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="fontFamily">@font/sourcesanspro_semibold</item>
        <item name="colorPrimary">@color/PrimaryOrange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionBarStyle">@style/myActionBarStyle</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">
            @style/spinnerItemStyle
        </item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="strokeColor">@color/PrimaryGreen</item>
        <item name="strokeWidth">3dp</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">
            @style/spinnerItemStyle
        </item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="Heading" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="Label" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/padding</item>
    </style>

    <style name="Label.Subtitle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="DiscreteSeekBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">-5dp</item>
        <item name="dsb_scrubberHeight">3dp</item>
        <item name="dsb_progressColor">@color/colorAccent</item>
        <item name="dsb_indicatorColor">@color/colorAccent</item>
    </style>

    <style name="BorderImageView">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="borderWidth">0.8dp</item>
        <item name="borderColor">@color/colorGrey500</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@color/md_blue_100</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@color/md_blue_100</item>
    </style>

    <style name="mealCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardBackgroundColor">@color/colorGrey50</item>
        <item name="cardCornerRadius">40dp</item>
        <item name="cardElevation">5dp</item>
        <item name="checkedIconMargin">8dp</item>
        <item name="checkedIconSize">48dp</item>
        <item name="checkedIconTint">@color/PrimaryGreen</item>
        <item name="contentPadding">0dp</item>
        <item name="strokeColor">@color/PrimaryOrange</item>
        <item name="strokeWidth">3dp</item>
    </style>

    <style name="mealMainFrame" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checkable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="cardBackgroundColor">@color/colorGrey50</item>
        <item name="cardCornerRadius">40dp</item>
        <item name="cardElevation">5dp</item>
        <item name="checkedIconMargin">8dp</item>
        <item name="checkedIconSize">48dp</item>
        <item name="checkedIconTint">@color/PrimaryGreen</item>
        <item name="contentPadding">0dp</item>
        <item name="strokeColor">@color/PrimaryOrange</item>
        <item name="strokeWidth">3dp</item>
    </style>

    <style name="myActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="fontFamily">@font/sourcesanspro_semibold</item>
    </style>

    <style name="moodButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/md_blue_100</item>
        <item name="layout_constraintWidth_max">320dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/md_blue_100</item>
        <item name="strokeColor">@color/md_blue_100</item>
        <item name="strokeWidth">10dp</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="moodFrame" parent="Widget.Design.ScrimInsetsFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="reminderExpandableLayout" parent="Widget.Design.ScrimInsetsFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="expandable_duration">300</item>
        <item name="expandable_isExpanded">false</item>
        <item name="expandable_spinner_gravity">start</item>
    </style>

    <style name="greySeparator">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/greySeparator</item>
    </style>

    <style name="alertButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:backgroundTint">@color/white_93</item>
    </style>

    <style name="textAlert">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/md_blue_100</item>
    </style>

    <style name="imageAlert">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:src">@android:drawable/checkbox_on_background</item>
        <item name="android:contentDescription">"checkbox image"</item>
    </style>

    <style name="parentTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/greyText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="editHoursText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">2</item>
        <item name="android:textSize">75sp</item>
        <item name="android:textColor">@color/white_93</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="separator">
        <item name="android:background">@color/white_93</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dip</item>
    </style>

    <style name="extendedMaterialButtonOutlinedStyle" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
    </style>

    <style name="parentLayoutImage">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="center_button_reminder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/md_blue_100</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="layout_section_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white_93</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingStart">20dp</item>
    </style>

    <style name="blue_button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:backgroundTint">@color/md_blue_100</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="button_transparent_background">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|bottom</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/md_blue_100</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="rippleColor">@color/md_blue_100</item>
        <item name="strokeColor">@color/md_blue_100</item>
        <item name="strokeWidth">5dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="meal_frame_text_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLength">25</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="meal_text_option">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLength">30</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="warning_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/design_default_color_error</item>
        <item name="android:textSize">18sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="date_picker_blue_text" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/SecondaryBlue</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="meal_frame_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="blue_text_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|center</item>
        <item name="android:textColor">@color/md_blue_100</item>
        <item name="android:textSize">@dimen/feature_title_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="second_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.70</item>
        <item name="android:background">@color/white_93</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- EXO PLAYER BUTTONS STYLES -->

    <style name="CustomExoMediaButton.Rewind" parent="ExoMediaButton.Rewind">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:tintMode">src_in</item>
    </style>

    <style name="CustomExoMediaButton.Play" parent="ExoMediaButton.Play">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:tintMode">src_in</item>
        <item name="android:contentDescription">@string/reproduzir_faixa</item>
        <item name="tint">@color/md_blue_100</item>
    </style>

    <style name="CustomExoMediaButton.Pause" parent="ExoMediaButton.Pause">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:tintMode">src_in</item>
        <item name="tint">@color/md_blue_100</item>
    </style>

    <style name="CustomExoMediaButton.FastForward" parent="ExoMediaButton.FastForward">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:tintMode">src_in</item>
        <item name="tint">@color/md_blue_100</item>
    </style>

    <style name="meal_option_background_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>
